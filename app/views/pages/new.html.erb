<h1>Create a page</h1>

<%= form_for @page do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title %>
    
    <%= f.label :author %>
    <%= f.text_field :author %>

    <%= f.label :body %>
    <%= f.text_area :body %>
    <%= f.submit %>

<% end%>


<hr>

<button>
<%= link_to 'Cancel', pages_path%>
</button>